            function removeProduct(event, userId) {
                console.log(
                    event.target.parentElement.parentElement.parentElement.children[0].getElementsByTagName("h6")[0]
                        .innerText
                );
                console.log(
                    event.target.parentElement.parentElement.parentElement.children[2].getElementsByTagName("span")[0]
                        .innerText
                );
                // console.log(event.parentElement.parentElement.children[0].textContent);
                var items = [];
                var name =
                    event.target.parentElement.parentElement.parentElement.children[0].getElementsByTagName("h6")[0]
                        .innerText;
                var size =
                    event.target.parentElement.parentElement.parentElement.children[2].getElementsByTagName("span")[0]
                        .innerText;
                JSON.parse(localStorage.getItem("cartProduct" + userId)).map((data) => {
                    if (data.productName != name || (data.productName == name && data.size != size)) {
                        items.push(data);
                        console.log("Cart deleted");
                    }
                });
                localStorage.setItem("cartProduct" + userId, JSON.stringify(items));
                alert("Removed from Cart");
                window.location.reload();
            }
