                                                console.log(good);
                                                $(".updateCartProduct<%= cartItem.cartProductCode %>").on(
                                                    "click",
                                                    function () {
                                                        //document.getElementById("update-cart-form").innerHTML = cartForm;
                                                        console.log("LLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLL");
                                                        var form = document.getElementById(
                                                            "update-cart-form<%= cartItem.cartProductCode %>"
                                                        );
                                                        //console.log(form);
                                                        form.submit();
